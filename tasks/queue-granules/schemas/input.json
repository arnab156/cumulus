{
  "title": "QueueGranulesInput",
  "description": "Describes the input and config used by the queue-granules task",
  "type": "object",
  "require": [ "files" ],
  "properties": {
    "pdr": {
      "type": "object",
      "required": ["name", "path"],
      "properties": {
        "name": { "type": "string" },
        "path": { "type": "string" }
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [ "filename" ],
        "properties": {
          "granuleId": { "type": "string" },
          "dataType": { "type": "string" },
          "files": { "type": "array" }
        }
      }
    }
  }
}
